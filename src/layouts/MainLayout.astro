---
interface Props {
    title: string;
}

const { title } = Astro.props;

// GESTIÃ“N DE SESIÃ“N
const userName = Astro.cookies.get("user_name")?.value;
const userRole = Astro.cookies.get("user_role")?.value;
const isAdmin = userRole === "ADMIN";
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <title>{title} | NatureApp</title>
        <style is:global>
            :root {
                --primary: #2d5a27;
                --secondary: #f4f1ea;
                --accent: #8b4513;
                --text: #333;
                --danger: #e63946;
            }
            body {
                font-family: system-ui, sans-serif;
                background-color: var(--secondary);
                color: var(--text);
                margin: 0;
            }
            nav {
                background: var(--primary);
                color: white;
                padding: 1rem 2rem;
                display: flex;
                justify-content: space-between;
                align-items: center;
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
            }
            nav a {
                color: white;
                text-decoration: none;
                font-size: 0.95rem;
            }
            .nav-brand {
                font-size: 1.3rem !important;
                font-weight: bold;
                margin: 0 !important;
            }
            .user-info {
                display: flex;
                align-items: center;
                gap: 15px;
            }

            .btn-add {
                background: white;
                color: var(--primary) !important;
                padding: 0.4rem 0.8rem;
                border-radius: 6px;
                font-weight: bold;
            }
            .logout-btn {
                background: rgba(255, 255, 255, 0.15);
                padding: 0.4rem 0.8rem;
                border-radius: 6px;
                font-size: 0.85rem;
            }
            .logout-btn:hover {
                background: var(--danger);
            }

            .admin-badge {
                font-size: 0.7rem;
                background: #ffd700;
                color: black;
                padding: 2px 6px;
                border-radius: 4px;
                font-weight: 800;
            }

            main {
                padding: 2rem;
                max-width: 1100px;
                margin: auto;
                min-height: 80vh;
            }
            footer {
                text-align: center;
                padding: 3rem 1rem;
                color: #666;
                border-top: 1px solid #ddd;
                margin-top: 3rem;
            }
        </style>
    </head>
    <body>
        <nav>
    <a href="/" class="nav-brand">ðŸŒ¿ NatureApp</a>
    <div class="user-info">
        <a href="/">Inicio</a>

        {
            userName ? (
                <>
                    {/* CUALQUIER USUARIO LOGUEADO PUEDE AÃ‘ADIR */}
                    <a href="/add-animal" class="btn-add">
                        + AÃ±adir
                    </a>
                    
                    <span style="opacity: 0.5">|</span>
                    
                    <span>
                        Hola, <strong>{userName}</strong>
                    </span>
                    
                    {/* SOLO EL ADMIN LLEVA LA PLACA */}
                    {isAdmin && <span class="admin-badge">ADMIN</span>}
                    
                    <a href="/api/logout" class="logout-btn">
                        Salir
                    </a>
                </>
            ) : (
                /* SI NO HAY SESIÃ“N: BotÃ³n de acceso general */
                <a
                    href="/login"
                    style="background: white; color: var(--primary); padding: 0.5rem 1rem; border-radius: 8px; font-weight: bold; display: flex; align-items: center; gap: 5px;"
                >
                    <span>ðŸ”‘</span> Acceder
                </a>
            )
        }
    </div>
</nav>

        <main>
            <slot />
        </main>

        <footer>
            <p><strong>Proyecto Fauna - 2026</strong> | Astro + Prisma</p>
        </footer>
    </body>
</html>
